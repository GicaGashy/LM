@model LM.Models.LM.Team

@{
    ViewData["Title"] = "Edit";
}

<div class="body">
    <ol class="breadcrumb breadcrumb-bg-pink">
        <li><a asp-controller="Dashboard" asp-action="Index"><i class="material-icons">home</i> Dashboard</a></li>
        <li><a asp-action="Index"> Teams</a></li>
        <li class="active">Edit (@Model.Name)</li>
    </ol>
</div>

<!-- Input -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    EDIT TEAM - @Model.Name
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TeamId" />
                            <div class="form-group">
                                <div class="form-line">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Team name" />
                                </div>

                                <div class="form-line m-t-50">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" rows="4" class="form-control no-resize" placeholder="Describe the team"></textarea>
                                </div>
                                <div class="form-line m-t-50">
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                    <label asp-for="Department" class="control-label"></label>
                                    <select asp-for="DepartmentId" class="form-control show-tick" data-live-search="true" asp-items="ViewBag.DepartmentId">
                                        <option value="" selected disabled>Select a Department</option>
                                    </select>
                                </div>

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn bg-amber" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Input -->

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
