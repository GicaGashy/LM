@model IEnumerable<LM.Models.LM.Department>

@{
    ViewData["Title"] = "Index";
}

<div class="body">
    <ol class="breadcrumb breadcrumb-bg-pink">
        <li><a asp-controller="Dashboard" asp-action="Index"><i class="material-icons">home</i> Dashboard</a></li>
        <li class="active"> Departments</li>
    </ol>
</div>

<a asp-action="Create" class="btn bg-teal waves-effect m-b-10">CREATE NEW</a>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    LIST OF DEPARTMENTS
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>DEPARTMENT NAME</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model)
                        {
                        <tr>
                            <th scope="row">@d.DepartmentId</th>
                            <td>@d.Name</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@d.DepartmentId" class="btn btn-warning">Edit</a>
                                    <a asp-action="Details" asp-route-id="@d.DepartmentId" class="btn btn-info">Details</a>
                                    <a asp-action="Delete" asp-route-id="@d.DepartmentId" class="btn btn-danger">Delete</a>
                                 </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
