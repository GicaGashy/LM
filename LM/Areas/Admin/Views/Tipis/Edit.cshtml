@model LM.Models.LM.Tipi

@{
    ViewData["Title"] = "Edit";
}

<div class="body">
    <ol class="breadcrumb breadcrumb-bg-pink">
        <li><a asp-controller="Dashboard" asp-action="Index"><i class="material-icons">home</i> Dashboard</a></li>
        <li><a asp-action="Index"> Types</a></li>
        <li class="active">Edit</li>
    </ol>
</div>


<!-- Input -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    EDIT: @Model.Name
                    <small>Write the name of the type and description</small>

                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TipiId" />
                            <div class="form-group">
                                <div class="form-line">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Team name" />
                                </div>

                                <div class="form-line m-t-50">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" rows="4" class="form-control no-resize" placeholder="Describe the team"></textarea>
                                </div>
                                <div class="form-line m-t-50">
                                    <span asp-validation-for="Rate" class="text-danger"></span>
                                    <label asp-for="Rate" class="control-label"></label>
                                    <select asp-for="Rate" class="form-control">
                                        <option value="" selected disabled>Rate the imporatance</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn bg-orange" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Input -->
<div>
    <a class="btn btn-success" asp-action="Index">Back to List</a>
</div>